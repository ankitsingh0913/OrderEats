<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Support">

    <LinearLayout
        android:id="@+id/supportTab"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_background_1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/tableRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_back"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Help and Support"
            android:textStyle="bold"
            android:textColor="#090909"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#090909"
        app:layout_constraintTop_toBottomOf="@id/supportTab" />

    <ScrollView
        android:id="@+id/scrollView6"
        android:layout_width="match_parent"
        android:layout_height="00dp"
        android:background="#EAEBEC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="FAQs (Frequently Asked Questions)"
                android:background="@drawable/btn_background_1"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:textColor="#040303"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Step-by-Step Guides"
                android:layout_marginTop="1dp"
                android:background="@drawable/btn_background_1"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:textColor="#040303"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Live Chat Support"
                android:layout_marginTop="1dp"
                android:background="@drawable/btn_background_1"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:textColor="#040303"
                android:textSize="20sp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Contact Information"
                android:layout_marginTop="1dp"
                android:background="@drawable/btn_background_1"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:textColor="#040303"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Feedback Forms"
                android:layout_marginTop="1dp"
                android:background="@drawable/btn_background_1"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:textColor="#040303"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Community Forums"
                android:layout_marginTop="1dp"
                android:background="@drawable/btn_background_1"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:textColor="#040303"
                android:textSize="20sp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="App Version Information"
                android:layout_marginTop="1dp"
                android:background="@drawable/btn_background_1"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:textColor="#040303"
                android:textSize="20sp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="User Account Assistance"
                android:layout_marginTop="1dp"
                android:background="@drawable/btn_background_1"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:textColor="#040303"
                android:textSize="20sp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Policy Information"
                android:layout_marginTop="1dp"
                android:background="@drawable/btn_background_1"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:textColor="#040303"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Language Support"
                android:layout_marginTop="1dp"
                android:background="@drawable/btn_background_1"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:textColor="#040303"
                android:textSize="20sp"/>






        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>